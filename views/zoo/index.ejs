<h1 class="text-center">Zoo Animals</h1>
<table class="table table-striped table-hover mt-4">
  <thead class="table-primary">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Species</th>
      <th>Age</th>
      <th>Habitat</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% animals.forEach((animal, index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= animal.name %></td>
      <td><%= animal.species %></td>
      <td><%= animal.age %></td>
      <td><%= animal.habitat %></td>
      <td>
        <a href="/zoo/edit/<%= animal.id %>" class="btn btn-warning btn-sm"
          >Edit</a
        >
        <form
          action="/zoo/<%= animal.id %>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<a href="/zoo/create" class="btn btn-success">Add New Animal</a>
